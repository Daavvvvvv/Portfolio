---
interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-sky-100/80 dark:text-sky-100"
    >{date}</time
  >
  <h3 class="text-lg font-semibold text-yellow-300 dark:text-yellow-300 mt-2">
    {title}
  </h3>
  <p class="mb-4 text-base font-semibold text-white dark:text-cyan-50 text-pretty">
    {description}
  </p>

</li>
