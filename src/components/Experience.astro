---
import type { Code } from "astro:components";
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "Febrero 2024",
    title: "Fullstack Engineer - Creacion de sistema de promotorias",
    description:
      "Paginas de acceso para proveedores, promotores, supervisores y marketing, sistema de fechas para promotorias donde actuan los cuatro actores mencionados, sistema de reportes para marketing y supervisores, sistema de reportes para proveedores, sistema de reportes para promotores.",
    link: "#",
  },
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700 ml-4">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experience}></ExperienceItem>
      </li>
    ))
  }
</ol>
